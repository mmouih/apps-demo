{
    "name": "mounir/apps-demo",
    "description": "Symfony demo for various contexts",
    "type": "project",
    "require": {
        "symfony/flex": "^2.4",
        "symfony/validator": ">=6.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan-symfony": "^1.3",
        "symfony/maker-bundle": "^1.52",
        "mmouih/entity-generator": "^1.0",
        "pestphp/pest": "^2.30"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Mounir Mouih",
            "email": "mounir.mouih@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
